<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="18sp" />

        <Button
            android:id="@+id/setting_button_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_back" >
        </Button>
    </FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/setting_linearlayout_cache"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item2" >

        <TextView
            android:id="@+id/setting_textview_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="清除缓存（已用30M）"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/setting_framelayout_offlinedownload"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/item2" >

        <TextView
            android:id="@+id/setting_textview_offlinedownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:text="离线听（下载最新20条）"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/setting_textview_downloadpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:text="90%"
            android:textColor="#fe0000"
            android:textSize="15sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/item2" >

        <FrameLayout
            android:id="@+id/setting_framelayout_feedback"
            android:layout_width="fill_parent"
            android:layout_height="66dp" >

            <TextView
                android:id="@+id/setting_textview_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:text="意见反馈"
                android:textColor="#666666"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrows" />
        </FrameLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@drawable/line" />

        <FrameLayout
            android:id="@+id/setting_framelayout_update"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_height="66dp" >

            <TextView
                android:id="@+id/setting_textview_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:text="版本升级"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/setting_textview_updatepercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:text="89%"
                android:textColor="#fe0000"
                android:textSize="15sp" />
        </FrameLayout>
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />
        
        <FrameLayout
            android:id="@+id/setting_framelayout_contactus"
            android:layout_width="fill_parent"
            android:layout_height="66dp" >

            <TextView
                android:id="@+id/setting_textview_contactus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:text="联系我们"
                android:textColor="#666666"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrows" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>