<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" > 
  
    <item android:id="@android:id/background">   
        <shape>   
            <corners android:radius="1dip" />   
            <gradient android:startColor="#00fe0000"  
                android:centerColor="#00fe0000" android:endColor="#00fe0000"  
                 />   <!-- android:centerY="0.45" android:angle="270" -->
        </shape>   
    </item>   
  
    <item android:id="@android:id/progress">   
        <clip>   
            <shape>   
                <corners android:radius="1dip" />   
                <gradient android:startColor="#fe0000"  
                    android:centerColor="#fe0000" android:endColor="#fe0000"  
                     />   <!-- android:centerY="0.45" android:angle="270" -->
            </shape>   
        </clip>   
    </item>   
</layer-list> 